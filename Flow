-- StarterGui'ye eklenen ScreenGui için Script
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer -- Kullanıcıyı otomatik algılar

-- GUI oluşturma
local gui = Instance.new("ScreenGui")
gui.Name = "ArbixHubGUI"
gui.Parent = localPlayer:WaitForChild("PlayerGui")

-- Frame (Flow Değeri)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 250)
frame.Position = UDim2.new(0.5, -150, 0.5, -125)
frame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
frame.Active = true -- Drag yapılabilirlik için gerekli
frame.Draggable = true -- Drag yapılabilir
frame.Parent = gui

-- Başlık
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.3, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.Text = "Arbix Hub"
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.BackgroundTransparency = 1
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextScaled = true
titleLabel.Parent = frame

-- "Made By" etiketi
local madeByLabel = Instance.new("TextLabel")
madeByLabel.Size = UDim2.new(1, 0, 0.2, 0)
madeByLabel.Position = UDim2.new(0, 0, 0.3, 0)
madeByLabel.Text = "Made By Xbatuhan2"
madeByLabel.TextColor3 = Color3.new(1, 1, 1)
madeByLabel.BackgroundTransparency = 1
madeByLabel.Font = Enum.Font.SourceSans
madeByLabel.TextScaled = true
madeByLabel.Parent = frame

-- Kullanıcı Flow değerini girecek TextBox
local flowInputLabel = Instance.new("TextLabel")
flowInputLabel.Size = UDim2.new(1, 0, 0.1, 0)
flowInputLabel.Position = UDim2.new(0, 0, 0.5, 0)
flowInputLabel.Text = "Enter Flow Value:"
flowInputLabel.TextColor3 = Color3.new(1, 1, 1)
flowInputLabel.BackgroundTransparency = 1
flowInputLabel.Font = Enum.Font.SourceSans
flowInputLabel.TextScaled = true
flowInputLabel.Parent = frame

local flowInput = Instance.new("TextBox")
flowInput.Size = UDim2.new(0.8, 0, 0.1, 0)
flowInput.Position = UDim2.new(0.1, 0, 0.6, 0)
flowInput.Text = ""
flowInput.PlaceholderText = "Flow value..."
flowInput.TextColor3 = Color3.new(0, 0, 0)
flowInput.BackgroundColor3 = Color3.new(1, 1, 1)
flowInput.Font = Enum.Font.SourceSans
flowInput.TextScaled = true
flowInput.Parent = frame

-- Start butonu
local startButton = Instance.new("TextButton")
startButton.Size = UDim2.new(0.8, 0, 0.2, 0)
startButton.Position = UDim2.new(0.1, 0, 0.8, 0)
startButton.Text = "Start"
startButton.TextColor3 = Color3.new(1, 1, 1)
startButton.BackgroundColor3 = Color3.new(0.1, 0.5, 0.1)
startButton.Font = Enum.Font.SourceSansBold
startButton.TextScaled = true
startButton.Parent = frame

-- Close butonu
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0.8, 0, 0.2, 0)
closeButton.Position = UDim2.new(0.1, 0, 1, 0)
closeButton.Text = "Close"
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.BackgroundColor3 = Color3.new(0.5, 0.1, 0.1)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextScaled = true
closeButton.Parent = frame

-- Start butonuna tıklama fonksiyonu
startButton.MouseButton1Click:Connect(function()
    local selectedPlayer = localPlayer -- Otomatik olarak LocalPlayer seçilir

    if selectedPlayer then
        local playerStats = selectedPlayer:FindFirstChild("PlayerStats")

        if playerStats then
            local flowValue = playerStats:FindFirstChild("Flow")
            
            if flowValue and flowValue:IsA("StringValue") then
                -- Girilen değeri Flow olarak ayarla
                flowValue.Value = flowInput.Text
                print(selectedPlayer.Name .. "'s Flow value set to '" .. flowInput.Text .. "'.")
            else
                warn("Flow value not found or incorrect type.")
            end
        else
            warn("PlayerStats section not found.")
        end
    else
        warn("Player not found.")
    end
end)

-- Close butonuna tıklama fonksiyonu
closeButton.MouseButton1Click:Connect(function()
    gui:Destroy() -- GUI'yi kapat
end)
